{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mbed",
            "args": [
                "compile",
                "--profile=debug",
                "-t",
                "GCC_ARM",
                "-m",
                "NUCLEO_L152RE"
            ],
            "windows": {
                "command": "mbed"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },

        {
            "label": "clean",
            "type": "shell",
            "command": "mbed",
            "args": [
                "compile",
                "-c"
            ],
            "windows": {
                "command": "mbed"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },

        {
            "label": "download",
            "type": "process",
            "command": "ST-LINK_CLI.exe",
            "args": [
                "-C", "SWD", 
                "-P", "./BUILD/NUCLEO_L152RE/GCC_ARM-Debug/ledbox-rev1.1.bin", "0x08000000",
                "-V", 
                "-Rst"
            ],
            "windows": {
                "command": "C:\\Program Files (x86)\\STMicroelectronics\\STM32 ST-LINK Utility\\ST-LINK Utility\\ST-LINK_CLI.exe"
            },
            
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}